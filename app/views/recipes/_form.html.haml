= form_for @recipe do |f|
  #error_explanation{:style => "display:none;"}
    %ul
      - if @recipe.errors.any?
        - @recipe.errors.full_messages.each do |msg|
          %li= msg
  .fields
    = f.label :Name
    %br/
    = f.text_field :name
    %br/
    = f.label :Description
    %br/
    = f.text_field :description
    %br/
    #fixins
      = f.fields_for :fixins do |fixin|
        = render 'fixin_fields', f: fixin
      .links
        = link_to_add_association 'add fixin', f, :fixins, partial: 'fixin_fields'
    #steps
      = f.fields_for :steps do |step|
        = render 'step_fields', f: step
      .links
        = link_to_add_association 'add step', f, :steps, partial: 'step_fields'
    = f.submit
.success-message
