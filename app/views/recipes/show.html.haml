%p.show
  %strong Name:
  = @recipe.name
%p.show
  %strong Description:
  = @recipe.description
%p.show
  %strong Ingredients
  - @recipe.fixins.each do |i|
    %li= i.name + " +++ " + i.amount
%p.show
  %strong Steps
  - @recipe.steps.each do |i|
    %li= i.title + " +++ " + i.description

